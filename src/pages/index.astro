---
import Layout from '../layouts/Layout.astro';
import Views from '@/views';
import 'antd/dist/reset.css';
---

<Layout title="GPT">
  <Views client:only="react" />
</Layout>

<style>
  .semi-portal {
    width: 0;
  }

  .semi-sidesheet-mask {
    border-radius: 15px;
  }

  .semi-sidesheet-inner {
    border-top-right-radius: 15px;
    border-bottom-right-radius: 15px;
  }

  .semi-form-vertical .semi-form-field {
    margin-top: 0;
    padding-top: 0;
  }

  .semi-sidesheet-body {
    padding: 0 12px;
  }
</style>

<style is:global>
  p {
    line-height: 30px;
  }
</style>
